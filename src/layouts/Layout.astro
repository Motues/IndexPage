---
import { siteConfig } from '@/config';
import { url } from '@utils/url-utils';

const pageTitle = `${siteConfig.title} - ${siteConfig.subTitle}`;
const backgroundImageEnabled = siteConfig.backgroundImage.enabled;
const backgroundImageUrl = url(siteConfig.backgroundImage.url);
const backgroundColor = siteConfig.backgroundImage.color;


---
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href={url(siteConfig.favicon)} type="image/x-icon">
    <title>{pageTitle}</title>
    
    <style define:vars={{backgroundImageUrl, backgroundColor}}>

        html, body { 
            margin: 0;
            padding: 0;
        }

        html {
            height: 100%;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Microsoft YaHei', sans-serif;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-color: var(--backgroundColor);
            position: relative;
            height: 100%;
            width: 100%;
        }
        
    </style>
</head>
<body style={backgroundImageEnabled ? `background-image: url(${backgroundImageUrl})` : ''}>
    <slot />
</body>

</html>