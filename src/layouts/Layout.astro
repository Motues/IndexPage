---
import { siteConfig } from '@/config';
import { url } from '@utils/url-utils';

const pageTitle = `${siteConfig.title} - ${siteConfig.subTitle}`;
const backgroundImageEnabled = siteConfig.backgroundImage.enabled;
const backgroundImageUrl = url(siteConfig.backgroundImage.url);
const backgroundColorLight = siteConfig.backgroundImage.colorLigth;
const backgroundColorDark = siteConfig.backgroundImage.colorDark;


---
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href={url(siteConfig.favicon)} type="image/x-icon">
    <title>{pageTitle}</title>
    
</head>
<body style={backgroundImageEnabled ? `background-image: url(${backgroundImageUrl})` : ''}>
    <slot />
</body>

</html>


<style is:global define:vars={{backgroundColorLight, backgroundColorDark}}>
/* 默认主体，白天模式 */
:root {
    --bg-color: var(--backgroundColorLight);
    --text-color: #000000;
    --footer-text-color: #000000;
    --link-color: #003b6e;
    --motto-text-color: #999;
    --border-color: gray;

    --image-shadow-color: rgba(0, 0, 0, 0.15);
}
/* 黑暗模式 */
[data-theme="dark"] {
    --bg-color: var(--backgroundColorDark);
    --text-color: #ffffff;
    --footer-text-color: #ffffff;
    --link-color: #57ace7;
    --motto-text-color: #c9d0d4;
    --border-color: gray;

    --image-shadow-color: rgba(59, 130, 246, 0.4);
}

 html, body { 
    margin: 0;
    padding: 0;
}

html {
    height: 100%;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Microsoft YaHei', sans-serif;
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    background-color: var(--bg-color);
    color: var(--text-color);
    position: relative;
    height: 100%;
    width: 100%;
}
</style>