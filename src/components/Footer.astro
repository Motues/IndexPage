---
import { profileConfig } from "../config";
import { url } from "@utils/url-utils";

let introPage : string;

if (profileConfig.introPage) {
    introPage = profileConfig.introPage;
} else {
    introPage = import.meta.env.BASE_URL;
}
---

<div class="footer">
    <div class="text">
        Made with ❤ by <a target="_self" href={introPage}>{profileConfig.name}</a>
        <br>
        Powered by <a target="_blank" href="https://astro.build">Astro</a>
        <br>
        <a target="_blank" href="https://beian.miit.gov.cn/" target="_blank">皖ICP备2025091754号-1</a>
    </div>
</div>

<style>

    .footer .text{
        text-align: center;
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 14px;
        z-index: 1;
        color: var(--footer-text-color);
        /* font-family: 'Comic Sans MS'; */
    }
    
    .footer a {
        color: inherit;
        /* transition: color 0.3s ease; */
        text-decoration: none;
        position: relative;
        display: inline-block;
    }
    
    .footer a::before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        border-bottom-style: dotted;
        border-bottom-width: 2px;
        /* background: currentColor; */
        transition: transform 0.3s ease;
        transform-origin: right;
        transform: scaleX(1);
    }
    
    .footer a:hover {
        color: var(--link-color);
    }
    
    .footer a:hover::before {
        transform-origin: right;
        transform: scaleX(0);
    }
</style>