  ---
  const { mottos } = Astro.props;
  ---
  
  <div class="motto-container">
    <p class="motto" id="motto">生活不止眼前的苟且，还有诗和远方。</p>
  </div>
  
  <style>
    .motto-container {
      flex: 1;
      min-height: 100px;
      display: flex;
      align-items: center;
      justify-content: flex-start;
    }
  
    .motto {
      font-size: 24px;
      font-weight: 300;
      line-height: 1.6;
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.6s ease;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }
  
    .motto.active {
      opacity: 1;
      transform: translateY(0);
    }
  
    @media (max-width: 768px) {
      .motto {
        font-size: 20px;
        text-align: center;
      }
    }
  </style>
  
  <script>
    // 修复点：正确传递 mottos 数组到客户端
    const mottosClient = JSON.parse(JSON.stringify(mottos || []));

    let currentIndex = 0;
    const mottoElement = document.querySelector('#motto');

    function changeMotto() {
      if (!mottoElement) return;
      mottoElement.classList.remove('active');
      
      setTimeout(() => {
        currentIndex = (currentIndex + 1) % mottosClient.length;
        mottoElement.textContent = mottosClient[currentIndex];
        mottoElement.classList.add('active');
      }, 600);
    }

    setInterval(changeMotto, 3000);
    
    // 初始化第一个 motto
    if (mottoElement) {
      mottoElement.classList.add('active');
    }
  </script>